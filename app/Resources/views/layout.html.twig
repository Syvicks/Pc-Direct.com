{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

        <title>{% block title %}Pc-Direct{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('Bundles/pcdblog/css/main.css') }}" type="text/css" />
            <link rel="stylesheet" href="{{ asset('Bundles/pcdblog/css/menu.css') }}" type="text/css" />
            <link rel="stylesheet" href="{{ asset('Bundles/pcdblog/css/formulaire.css') }}" type="text/css" />
            <link rel="stylesheet" href="{{ asset('Bundles/pcdblog/css/style.css') }}" type="text/css" />
            <link rel="stylesheet" href="{{ asset('Bundles/pcdblog/css/user.css') }}" type="text/css" />
        {% endblock %}
    </head>
 
    <body>
        <div id="page">
            <div id="bloc-principal">
                
                <div id="header">
                    <div class="home">
                        <a href="{{ path('pcdblog_home') }}">ACCUEIL</a>
                    </div>  
                    <div class="connexion">
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            Connecté en tant que {{ app.user.username }} - 
                            <a href="{{ path('fos_user_profile_show') }}">Votre Profil</a> - 
                            <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
                        {% else %}
                            <a href="{{ path('fos_user_security_login') }}">Connexion</a> - 
                            <a href="{{ path('fos_user_registration_register') }}">Inscrivez-vous !</a>
                        {% endif %}
                    </div>
                        
                    <ul class="menu">
                        <li><a href="{{ path('pcdblog_services') }}">Nos services</a>
                            <ul>
                                <li><a href="{{ path('pcdblog_distance') }}">Dépannage à distance</a>
                                <li><a href="{{ path('pcdblog_ponctuel') }}">Dépannage sur place</a>
                                <li><a href="{{ path('pcdblog_formation') }}">Formation</a>
                            </ul>
                        </li>
                        <li><a href="{{ path('pcdblog_home') }}">Boutique</a>
                            <ul>
                                <li><a href="{{ path('pcdblog_home') }}">Achetez</a>
                                <li><a href="{{ path('pcdblog_home') }}">Vendez</a>
                            </ul>
                        </li>
                        <li><a href="{{ path('pcdblog_home') }}">Dépannage ponctuel</a>
                            <ul>
                                <li><a href="{{ path('pcdblog_home') }}">sub</a>
                                <li><a href="{{ path('pcdblog_home') }}">sub</a>
                                <li><a href="{{ path('pcdblog_home') }}">sub</a>
                                <li><a href="{{ path('pcdblog_home') }}">sub</a>
                            </ul>
                        </li>
                        <li><a href="{{ path('pcdblog_guestbook') }}">Livre d'or</a></li>
                        <li><a href="{{ path('pcdblog_about') }}">Qui sommes nous ?</a></li>
                        <li><a href="{{ path('pcdblog_contact') }}">Contact</a></li>
                    </ul>
                </div> <!– fin header –>
        
                <div id="content">
                    {% block body %}
                    {% endblock %}
                </div>     
            </div> <!– fin #bloc-principal –>
            
            <div id="footer">
                <div class="pcd">
                    <ul>PC-Direct
                        <li><a href="{{ path('pcdblog_about') }}">Qui sommes nous ?</a></li>
                        <li><a href="{{ path('pcdblog_contact') }}">Contact</a></li>
                        <li><a href="">Livre d'or</a></li>
                        <li><a href="">FAQ</a></li>
                        <li><a href="">Nos Projets</a></li>
                    </ul>
                </div>
                <div class="partenaire">
                    <ul>Partenaires
                        <li><a href="">Partenaire 1</a></li>
                        <li><a href="">Partenaire 2</a></li>
                    </ul>
                </div>
                <div class="communaute">
                    <ul>Communauté
                        <li><a href="" class="icon-facebook">Facebook</a></li>
                        <li><a href="" class="icon-twitter">Twitter</a></li>
                    </ul>
                </div>
                <div class="reserved">
                    <p>The sky's the limit and beyond.
                    </br></br>
                    © 2013 - PC-Direct - Tout droits réservés - Toute reproduction est interdite
                    </p>
                </div>
            </div> <!– fin #footer –>
      
        </div> <!– fin #page –>
 
    {% block javascripts %}
      {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
      <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
      <script type="text/javascript" src="{{ asset('Bundles/pcdblog/js/main.js') }}"></script>
    {% endblock %}
 
    </body>
</html>
